<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/card_scrim"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:background="@color/black_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/card_background"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/character_image"
        app:layout_constraintBottom_toBottomOf="@id/character_image"
        app:layout_constraintStart_toStartOf="@id/character_image"
        app:layout_constraintEnd_toEndOf="@id/character_location" />

    <ImageView
        android:id="@+id/character_image"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:contentDescription="@string/character_image"
        android:padding="20dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/character_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/character_image"
        app:layout_constraintBottom_toTopOf="@id/character_location"
        app:layout_constraintStart_toStartOf="@id/character_location"
        tools:text="Rick Sanchez" />

    <TextView
        android:id="@+id/character_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@id/character_name"
        app:layout_constraintBottom_toBottomOf="@id/character_image"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Earth" />

</merge>